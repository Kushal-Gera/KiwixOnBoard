<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFCC80"
    tools:context=".Frag3">

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0">

        <View
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="620dp"
            android:background="@drawable/circle" />

        <View
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="560dp"
            android:background="@drawable/circle" />

        <View
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="450dp"
            android:background="@drawable/circle" />

        <View
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="86dp"
            android:layout_marginTop="230dp"
            android:background="@drawable/circle" />

        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="130dp"
            android:background="@drawable/circle" />

        <View
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/circle" />

        <View
            android:layout_width="30dp"
            android:layout_height="29dp"
            android:layout_marginStart="340dp"
            android:layout_marginTop="550dp"
            android:background="@drawable/circle" />

        <View
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="320dp"
            android:layout_marginTop="420dp"
            android:background="@drawable/circle" />

        <View
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_marginStart="280dp"
            android:layout_marginTop="320dp"
            android:background="@drawable/circle" />

        <View
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginStart="260dp"
            android:layout_marginTop="180dp"
            android:background="@drawable/circle" />

        <View
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="300dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/circle" />

        <View
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="370dp"
            android:background="@drawable/circle" />

    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="20dp"
        android:elevation="2dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:letterSpacing="0.09"
        android:lineSpacingExtra="4dp"
        android:text="KIWIX"
        android:textColor="#000"
        android:textSize="25sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:elevation="2dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:letterSpacing="0.09"
        android:lineSpacingExtra="2dp"
        android:text="KIWIX  simply  works  by\nsaving online content\nto your storage."
        android:textColor="#000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="60dp"
        android:elevation="0dp"
        android:padding="30dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/book"
        app:lottie_speed="0.9" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="450dp"
        android:layout_marginEnd="30dp"
        android:elevation="2dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:text="Now read online content"
        android:textColor="#000"
        android:textSize="25sp"
        android:visibility="gone" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="460dp"
        android:layout_marginEnd="30dp"
        android:elevation="2dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:text="Now\nLet's Get Started !"
        android:textColor="#000"
        android:textSize="26sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginStart="30dp"
        android:layout_marginTop="570dp"
        android:layout_marginEnd="30dp"
        android:elevation="4dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/bg2"
            android:drawableStart="@drawable/ic_navigate_before_black_24dp"
            android:drawablePadding="-30dp"
            android:drawableTint="#555"
            android:elevation="0dp"
            android:gravity="center"
            android:paddingStart="10dp"
            android:text="BACK"
            android:textColor="#555"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="50dp"
            android:background="@drawable/bg"
            android:drawableEnd="@drawable/ic_navigate_next_black_24dp"
            android:drawablePadding="-30dp"
            android:elevation="0dp"
            android:gravity="center"
            android:paddingEnd="10dp"
            android:text="Finish"
            android:textColor="#000"
            android:textSize="18dp"
            android:textStyle="bold" />

    </LinearLayout>

</FrameLayout>